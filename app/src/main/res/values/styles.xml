<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/tabTextSize</item>
    </style>
    <dimen name="tabTextSize">15sp</dimen>
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/widget_popup_show_in</item>
        <item name="android:windowExitAnimation">@anim/widget_popup_dismiss_out</item>
    </style>
</resources>