<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_service_small_song_album"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="1dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_widget_album"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:id="@+id/ll_service_name_part"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_service_small_song_album"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_service_small_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#333437"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:text="青い空のカミュ"/>
        <TextView
            android:id="@+id/tv_service_small_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="青い空のカミュ"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_service_small_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginVertical="12dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ll_service_name_part"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_service_small_prev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_widget_skip_preview" />
        <ImageView
            android:id="@+id/iv_service_small_play_or_pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_widget_play_circle" />
        <ImageView
            android:id="@+id/iv_service_small_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_widget_skip_next" />
        <ImageView
            android:id="@+id/iv_service_small_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_service_close" />
    </LinearLayout>
</RelativeLayout>