<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >
    <com.gochiusa.musicapp.plus.widget.RoundImageView
        android:id="@+id/iv_widget_album_image"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_widget_album"
        android:layout_marginStart="5dp"
        android:layout_marginVertical="7dp"
        app:thumb="true"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_widget_play_or_pause"
        android:layout_toEndOf="@+id/iv_widget_album_image">
        <com.gochiusa.musicapp.plus.widget.ScrollTextView
            android:id="@+id/tv_widget_scroll_music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="12sp"
            tools:text="青い空のカミュ"/>
        <TextView
            android:id="@+id/tv_widget_bottom_artist_name"
            tools:text="青い空のカミュ"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_widget_play_or_pause"
        android:layout_toStartOf="@+id/btn_widget_playlist"
        android:layout_width="36dp"
        android:layout_marginVertical="7dp"
        android:layout_marginEnd="7dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_widget_play_circle" />
    <Button
        android:id="@+id/btn_widget_playlist"
        android:layout_alignParentEnd="true"
        android:layout_width="36dp"
        android:layout_marginVertical="7dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_widget_playlist" />
</RelativeLayout>