<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_music_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/music_default_song_duration" />
    <SeekBar
        android:id="@+id/bar_music_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_music_progress"
        android:layout_toStartOf="@+id/tv_music_full_length"
        android:layout_marginHorizontal="5dp"
        />

    <TextView
        android:id="@+id/tv_music_full_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:text="@string/music_default_song_duration" />
</RelativeLayout>